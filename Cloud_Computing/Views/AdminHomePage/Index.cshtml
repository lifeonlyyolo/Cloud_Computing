@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold">Admin Dashboard</h1>
        <p class="text-muted">Manage salon operations and generate reports</p>
    </div>

    <div class="row justify-content-center g-4">

        <!-- Manage Salon -->
        <div class="col-md-5">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <h3 class="card-title mb-3">Manage Salon</h3>
                    <p class="card-text text-muted">
                        Manage admins, customers, services, appointments, and payments.
                    </p>

                    <div class="d-grid gap-2">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-primary btn-lg">
                            Admin
                        </a>
                        <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-primary">
                            Customer
                        </a>
                        <a asp-controller="Order" asp-action="Index" class="btn btn-outline-primary">
                            Order
                        </a>
                        <a asp-controller="Delivery" asp-action="Index" class="btn btn-outline-primary">
                            Delivery
                        </a>
                        <a asp-controller="Payment" asp-action="Index" class="btn btn-outline-primary">
                            Payment
                        </a>
                        <a asp-controller="MenuItem" asp-action="Index" class="btn btn-outline-primary">
                            Menu Item
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Generate Report -->
        <div class="col-md-5">
            <div class="card shadow h-100 border-success">
                <div class="card-body text-center">
                    <h3 class="card-title mb-3">Generate Report</h3>
                    <p class="card-text text-muted">
                        Generate and download system reports in PDF format.
                    </p>

                    <div class="d-grid gap-2">
                        <a asp-controller="PaymentReport" asp-action="DownloadPdf"
                           class="btn btn-success btn-lg">
                            Download Payment Report (PDF)
                        </a>

                        <!-- Future reports -->
                        <a asp-controller="AppointmentReport"
                           asp-action="DownloadPdf"
                           class="btn btn-success btn-lg">
                            Download Appointment Report (PDF)
                        </a>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
