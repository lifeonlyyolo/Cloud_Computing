@model WebApplication1.Models.Payment

<h2>Add New Payment</h2>

<form asp-controller="Payment" asp-action="Create" method="post">

    <div class="form-group">
        <label>Payment Id</label>
        <input asp-for="Id" class="form-control" />
    </div>

    <div class="form-group">
        <label>Order Id</label>
        <input asp-for="OrderId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Admin Id</label>
        <input asp-for="AdminId" class="form-control" />
    </div>

    <div class="form-group">
        <label>Amount</label>
        <input asp-for="Amount" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label>Payment Method</label>
        <input asp-for="PaymentMethod" class="form-control" />
    </div>

    <div class="form-group">
        <label>Payment Status</label>
        <input asp-for="PaymentStatus" class="form-control" />
    </div>

    <div class="form-group">
        <label>Payment Date</label>
        <input asp-for="PaymentDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
