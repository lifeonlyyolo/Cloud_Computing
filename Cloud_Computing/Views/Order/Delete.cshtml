@model WebApplication1.Models.Order

<h2>Delete Order</h2>
<p>Are you sure you want to delete this admin?</p>

<p><strong>Id:</strong> @Model.OrderId</p>
<p><strong>Name:</strong> @Model.CustomerName</p>
<p><strong>Name:</strong> @Model.TotalPrice</p>

<form asp-controller="Order" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
