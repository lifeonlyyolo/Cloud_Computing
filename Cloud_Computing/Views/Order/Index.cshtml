@model IEnumerable<WebApplication1.Models.Order>
@{
    Layout = "_AdminLayout";
}
<h2>Order List</h2>

<div class="mb-3">
    <a asp-controller="Admin" asp-action="AdminHomePage" class="btn-back">
        &larr; Back to Admin Home Page
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Customer Id</th>
            <th>Customer Name</th>
            <th>Item Name</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var modelclass in Model)
        {
            <tr>
                <td>@modelclass.Id</td>
                <td>@modelclass.CustomerId</td>
                <td>@modelclass.CustomerName</td>
                <td>@modelclass.ItemName</td>
                <td>@modelclass.TotalPrice</td>
                <td>
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@modelclass.Id">Details</a> |
                    <a asp-controller="Order" asp-action="Edit" asp-route-id="@modelclass.Id">Edit</a> |
                    <a asp-controller="Order" asp-action="Delete" asp-route-id="@modelclass.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="admin-scope">
    <div class="nav-container">
        <a asp-controller="AdminHomePage" asp-action="AdminHomePage" class="btn-home">
            <span class="icon">🏠</span> Back to Admin Dashboard
        </a>
    </div>

</div>