@model IEnumerable<WebApplication1.Models.BookingHistoryViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Booking History - Wave Cafe</title>
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/css/tooplate-wave-cafe.css">
    <link rel="stylesheet" href="~/css/Customer/BookingHistory.css">

</head>
<body>

    <div class="history-container">
        <div class="history-box">
            <a href="/Customer/Index" class="back-link"><i class="fas fa-arrow-left"></i> Back to Menu</a>
            <h2 style="color: #099; margin: 0;">My Booking History</h2>

            <div class="filter-section">
                <input type="text" id="searchInput" class="search-input" placeholder="Search by Product Name..." onkeyup="filterTable()">

                <select id="typeFilter" class="filter-select" onchange="filterTable()">
                    <option value="all">Show All Orders</option>
                    <option value="delivery">Delivery</option>
                    <option value="dine in">Dine In</option>
                </select>
            </div>

            <table id="historyTable">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Product Details</th>
                        <th>Type</th>
                        <th>Qty</th>
                        <th>Total</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr class="order-row">
                            <td class="order-id"><small>@order.OrderId</small></td>
                            <td>@order.OrderTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="product-name">
                                <strong>@order.ItemName</strong>
                                <span class="spec-info">@order.Size | @order.Sugar Sugar | @order.Ice Ice</span>
                            </td>
                            <td class="order-type" data-type="@(order.DeliveryType?.ToLower())">
                                @if (order.DeliveryType == "Delivery")
                                {
                                    <span class="type-badge type-delivery">Delivery</span>
                                    <button class="btn-address" onclick="showAddress('@(order.Address ?? "No address recorded")')"><i class="fas fa-map-marker-alt"></i></button>
                                }
                                else
                                {
                                    <span class="type-badge type-dinein">Dine In</span>
                                }
                            </td>
                            <td>@order.Quantity</td>
                            <td style="color: #099; font-weight: bold;">RM @order.TotalPrice.ToString("F2")</td>
                            <td><span style="color: #27ae60;">@order.Status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="tm-video-wrapper">
        <video autoplay muted loop id="tm-video"><source src="~/video/wave-cafe-video-bg.mp4" type="video/mp4"></video>
    </div>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script>
        // 修复地址弹窗，确保使用引号包裹地址内容
        function showAddress(addr) { alert("Delivery Address:\n" + addr); }

        function filterTable() {
            const searchText = document.getElementById('searchInput').value.toLowerCase();
            const filterValue = document.getElementById('typeFilter').value;
            const rows = document.querySelectorAll('.order-row');

            rows.forEach(row => {
                // 仅抓取产品名称进行比对
                const productName = row.querySelector('.product-name strong').textContent.toLowerCase();
                const type = row.querySelector('.order-type').getAttribute('data-type');

                const matchesSearch = productName.includes(searchText);
                const matchesFilter = (filterValue === "all" || type === filterValue);

                if (matchesSearch && matchesFilter) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }

        function setVideoSize() {
            const vidWidth = 1920; const vidHeight = 1080;
            const windowWidth = window.innerWidth; const windowHeight = window.innerHeight;
            const tempVidWidth = windowHeight * vidWidth / vidHeight;
            const tempVidHeight = windowWidth * vidHeight / vidWidth;
            const newVidWidth = tempVidWidth > windowWidth ? tempVidWidth : windowWidth;
            const newVidHeight = tempVidHeight > windowHeight ? tempVidHeight : windowHeight;
            $('#tm-video').css({ 'width': newVidWidth, 'height': newVidHeight });
        }

        $(document).ready(function () {
            setVideoSize();
            window.onresize = function () { setTimeout(setVideoSize, 100); };
        });
    </script>
</body>
</html>