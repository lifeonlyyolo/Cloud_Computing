@model WebApplication1.Models.InvoiceViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Secure Payment</title>
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/tooplate-wave-cafe.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            font-family: 'Open Sans', sans-serif;
        }

        .full-screen-center {
            position: relative;
            z-index: 100;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .center-card {
            width: 100%;
            max-width: 450px;
            background: rgba(0, 0, 0, 0.85);
            padding: 40px;
            border-radius: 15px;
            border: 1px solid rgba(255,255,255,0.1);
            color: white;
        }

        .pay-option {
            background: rgba(255,255,255,0.05);
            border: 1px solid #444;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .pay-radio {
            transform: scale(1.3);
            margin-right: 15px;
            accent-color: #009999;
        }

        /* 模拟输入框样式 */
        .input-group {
            background: rgba(255,255,255,0.1);
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 15px;
            display: none;
        }

            .input-group input {
                width: 100%;
                padding: 10px;
                margin-top: 8px;
                background: #222;
                border: 1px solid #555;
                color: white;
                border-radius: 4px;
                box-sizing: border-box;
            }

        .btn-pay {
            width: 100%;
            padding: 15px;
            background: #009999;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            margin-top: 20px;
            cursor: pointer;
            text-transform: uppercase;
        }

            .btn-pay:hover {
                background: #007a7a;
            }
    </style>
</head>
<body>
    <div class="full-screen-center">
        <div class="center-card">
            <h2 style="text-align:center; color:#009999;">Payment</h2>
            <div style="text-align:center; font-size:30px; font-weight:bold; margin:20px 0;">
                RM @Model.TotalPrice.ToString("F2")
            </div>

            <form action="/Customer/PaymentSuccess" method="post" onsubmit="return validateForm()">
                <p style="color:#aaa; font-size:14px; margin-bottom:15px;">Select Payment Method:</p>

                <label class="pay-option">
                    <input type="radio" name="PaymentMethod" value="Credit Card" class="pay-radio" checked onclick="toggleFields('card')">
                    <i class="fas fa-credit-card" style="margin-right:10px;"></i> Credit Card
                </label>
                <div id="cardFields" class="input-group" style="display:block;">
                    <label style="font-size:12px; color:#009999;">Card Number (16 Digits)</label>
                    <input type="text" id="cardNumber" placeholder="0000 0000 0000 0000" maxlength="16">
                </div>

                <label class="pay-option">
                    <input type="radio" name="PaymentMethod" value="TNG E-Wallet" class="pay-radio" onclick="toggleFields('tng')">
                    <i class="fas fa-wallet" style="margin-right:10px;"></i> TNG E-Wallet
                </label>
                <div id="tngFields" class="input-group">
                    <label style="font-size:12px; color:#009999;">Phone Number</label>
                    <input type="text" id="tngPhone" placeholder="01X-XXXXXXX">
                    <label style="font-size:12px; color:#009999; margin-top:10px; display:block;">6-Digit PIN</label>
                    <input type="password" id="tngPin" placeholder="XXXXXX" maxlength="6">
                </div>

                <button type="submit" class="btn-pay">Pay Now</button>
                <a href="/Customer/Index" style="display:block; text-align:center; margin-top:15px; color:#aaa; text-decoration:none; font-size:14px;">Cancel</a>
            </form>
        </div>
    </div>

    <div class="tm-video-wrapper"><video autoplay muted loop id="tm-video"><source src="~/video/wave-cafe-video-bg.mp4" type="video/mp4"></video></div>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script>
        function toggleFields(method) {
            document.getElementById('cardFields').style.display = (method === 'card') ? 'block' : 'none';
            document.getElementById('tngFields').style.display = (method === 'tng') ? 'block' : 'none';
        }

        function validateForm() {
            const method = document.querySelector('input[name="PaymentMethod"]:checked').value;

            if (method === "Credit Card") {
                const card = document.getElementById('cardNumber').value;
                if (card.length !== 16 || isNaN(card)) {
                    alert("Please enter a valid 16-digit Credit Card number.");
                    return false;
                }
            } else if (method === "TNG E-Wallet") {
                const phone = document.getElementById('tngPhone').value;
                const pin = document.getElementById('tngPin').value;
                if (phone.length < 10) {
                    alert("Please enter a valid phone number.");
                    return false;
                }
                if (pin.length !== 6 || isNaN(pin)) {
                    alert("TNG PIN must be exactly 6 digits.");
                    return false;
                }
            }
            return true;
        }

        // 视频自适应代码保持不变
        function setVideoSize() { const vidWidth = 1920; const vidHeight = 1080; const windowWidth = window.innerWidth; const windowHeight = window.innerHeight; const tempVidWidth = windowHeight * vidWidth / vidHeight; const tempVidHeight = windowWidth * vidHeight / vidWidth; const newVidWidth = tempVidWidth > windowWidth ? tempVidWidth : windowWidth; const newVidHeight = tempVidHeight > windowHeight ? tempVidHeight : windowHeight; const tmVideo = $('#tm-video'); tmVideo.css('width', newVidWidth); tmVideo.css('height', newVidHeight); }
        $(document).ready(function () { setVideoSize(); window.onresize = function () { setTimeout(setVideoSize, 100); }; });
    </script>
</body>
</html>