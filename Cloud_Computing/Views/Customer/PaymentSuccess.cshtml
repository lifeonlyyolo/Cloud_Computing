@model WebApplication1.Models.ReceiptViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Receipt - Payment Success</title>
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/tooplate-wave-cafe.css">

    <style>
        /* === 核心居中布局 === */
        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            font-family: 'Open Sans', sans-serif;
        }

        .full-screen-center {
            position: relative;
            z-index: 100;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .center-card {
            width: 100%;
            max-width: 450px; /* 收据卡片稍微窄一点 */
            background: rgba(0, 0, 0, 0.85);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.6);
            border: 1px solid rgba(255,255,255,0.1);
            color: white;
            backdrop-filter: blur(5px);
        }

        /* === 收据专用样式 === */
        .receipt-header {
            text-align: center;
            border-bottom: 1px dashed rgba(255,255,255,0.3);
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .success-icon {
            color: #009999;
            font-size: 50px;
            margin-bottom: 10px;
        }

        .row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            font-size: 14px;
            color: #ddd;
        }

            .row span:first-child {
                color: #aaa;
            }

        .item-box {
            background: rgba(255,255,255,0.05);
            padding: 15px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px dashed rgba(255,255,255,0.3);
            font-size: 20px;
            font-weight: bold;
            color: #009999;
        }

        /* 按钮组 */
        .btn-group {
            display: flex;
            gap: 10px;
            margin-top: 30px;
        }

        .btn-print {
            flex: 1;
            padding: 12px;
            background: #009999;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

        .btn-home {
            flex: 1;
            padding: 12px;
            background: transparent;
            border: 1px solid #555;
            color: #ccc;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            transition: 0.3s;
        }

        .btn-print:hover {
            background: #007a7a;
        }

        .btn-home:hover {
            border-color: white;
            color: white;
        }

        /* === 打印专用样式 (关键) === */
        @@media print {
            body * {
                visibility: hidden;
            }
            /* 隐藏所有 */
            .tm-video-wrapper, .btn-group {
                display: none !important;
            }
            /* 隐藏视频和按钮 */

            .center-card, .center-card * {
                visibility: visible; /* 只显示卡片内容 */
                color: black !important; /* 强制黑字 */
                background: white !important; /* 强制白底 */
                box-shadow: none !important;
                border: none !important;
            }

            .center-card {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                max-width: 100%;
                padding: 0;
                margin: 0;
            }
            /* 打印时把虚线改成深色 */
            .receipt-header, .total-row {
                border-color: #000 !important;
            }

            .item-box {
                background: none !important;
                border: 1px solid #000;
            }
        }
    </style>
</head>
<body>

    <div class="full-screen-center">
        <div class="center-card">

            <div class="receipt-header">
                <i class="fas fa-check-circle success-icon"></i>
                <h2 style="margin:0; color:white;">Payment Successful!</h2>
                <p style="margin:5px 0 0 0; color:#aaa; font-size:13px;">Thank you for your order</p>
            </div>

            <div class="row"><span>Order ID:</span> <span>#@Model.OrderId</span></div>
            <div class="row"><span>Date:</span> <span>@Model.TransactionDate.ToString("yyyy-MM-dd HH:mm")</span></div>
            <div class="row"><span>Method:</span> <span>@Model.PaymentMethod</span></div>
            <div class="row"><span>Type:</span> <span>@Model.DeliveryType</span></div>

            <div class="item-box">
                <div style="font-size:16px; font-weight:bold; color:white; margin-bottom:5px;">
                    @Model.ItemName <span style="font-size:13px; font-weight:normal;">(x @Model.Quantity)</span>
                </div>
              
            </div>

            @if (Model.DeliveryType == "Delivery")
            {
                <div style="font-size:13px; color:#aaa; margin-bottom:10px; border-left:2px solid #009999; padding-left:10px;">
                    <i class="fas fa-map-marker-alt"></i> <b>Delivering to:</b><br>
                    @Model.DeliveryAddress
                </div>
            }

            <div class="total-row">
                <span>Total Paid:</span>
                <span>RM @Model.TotalPrice.ToString("F2")</span>
            </div>

            <div class="btn-group">
                <button onclick="window.print()" class="btn-print"><i class="fas fa-print"></i> Print</button>
                <a href="/Customer/Index" class="btn-home">New Order</a>
            </div>

        </div>
    </div>

    <div class="tm-video-wrapper">
        <video autoplay muted loop id="tm-video">
            <source src="~/video/wave-cafe-video-bg.mp4" type="video/mp4">
        </video>
    </div>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script>
        function setVideoSize() { const vidWidth = 1920; const vidHeight = 1080; const windowWidth = window.innerWidth; const windowHeight = window.innerHeight; const tempVidWidth = windowHeight * vidWidth / vidHeight; const tempVidHeight = windowWidth * vidHeight / vidWidth; const newVidWidth = tempVidWidth > windowWidth ? tempVidWidth : windowWidth; const newVidHeight = tempVidHeight > windowHeight ? tempVidHeight : windowHeight; const tmVideo = $('#tm-video'); tmVideo.css('width', newVidWidth); tmVideo.css('height', newVidHeight); }
        $(document).ready(function () { setVideoSize(); window.onresize = function () { setTimeout(setVideoSize, 100); }; });
    </script>
</body>
</html>