@model WebApplication1.Models.InvoiceViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Final Invoice - Wave Cafe</title>
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/css/tooplate-wave-cafe.css">
    <link rel="stylesheet" href="~/css/Customer/Invoice.css">

</head>
<body>

    <div class="full-screen-center">
        <div class="invoice-card">
            <h2 style="text-align:center; color:#0cc; margin-bottom:20px;"><i class="fas fa-file-invoice"></i> Your Invoice</h2>

            <div style="margin-bottom:20px; font-size: 14px;">
                <p><strong>Customer:</strong> @Model.CustomerName</p>
                <p><strong>Date:</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</p>
            </div>

            <table class="invoice-table">
                <thead>
                    <tr>
                        <th>Drink Item</th>
                        <th style="text-align:center;">Qty</th>
                        <th style="text-align:right;">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <strong>@item.ItemName</strong><br />
                                <small style="color:#aaa;">@item.Size, @item.Ice, @item.Sugar</small>
                            </td>
                            <td style="text-align:center;">@item.Quantity</td>
                            <td style="text-align:right;">RM @item.TotalPrice.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <form action="/Customer/Payment" method="get">
                <div style="margin-top:20px;">
                    <label style="color:#0cc; font-weight:bold;">Delivery Method:</label><br />
                    <label style="margin-right:20px;">
                        <input type="radio" name="DeliveryType" value="Dine In" checked onclick="updateTotal(0)"> Dine In / Pickup
                    </label>
                    <label>
                        <input type="radio" name="DeliveryType" value="Delivery" onclick="updateTotal(5)"> Delivery (+RM 5.00)
                    </label>
                </div>

                <textarea id="addr" name="UserAddress" rows="2" placeholder="Enter delivery address..."
                          style="display:none; width:100%; background:rgba(255,255,255,0.1); color:white; border:1px solid #555; padding:10px; margin-top:10px; border-radius:5px;"></textarea>

                <div class="total-section">
                    <p>Items Subtotal: RM @Model.BaseTotalPrice.ToString("F2")</p>
                    <p>Delivery Fee: <span id="fee">RM 0.00</span></p>
                    <h3 style="color:#0cc; font-size:24px;">Total: <span id="grandTotal">RM @Model.BaseTotalPrice.ToString("F2")</span></h3>
                </div>

                <button type="submit" class="btn-pay">Confirm & Proceed</button>
                <a href="/Customer/CartList" style="display:block; text-align:center; margin-top:15px; color:#aaa; text-decoration:none;">Back to Cart</a>
            </form>
        </div>
    </div>

    <div class="tm-video-wrapper">
        <video autoplay muted loop id="tm-video"><source src="~/video/wave-cafe-video-bg.mp4" type="video/mp4"></video>
    </div>

    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script>
        const base = @Model.BaseTotalPrice;
        function updateTotal(fee) {
            document.getElementById('fee').innerText = "RM " + fee.toFixed(2);
            document.getElementById('grandTotal').innerText = "RM " + (base + fee).toFixed(2);
            document.getElementById('addr').style.display = (fee > 0) ? 'block' : 'none';
        }
    </script>
</body>
</html>