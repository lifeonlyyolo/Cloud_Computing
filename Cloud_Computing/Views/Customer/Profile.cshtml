@model WebApplication1.Models.Customer
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>My Profile - Wave Cafe</title>
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/css/tooplate-wave-cafe.css">
    <link rel="stylesheet" href="~/css/Customer/Profile.css">
    <style>

    </style>
</head>
<body>
    <div class="profile-container">
        <div class="profile-box">
            <h2 style="color: #099; text-align: center;">My Profile</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" style="background:rgba(220,53,69,0.2); color:#ff6b6b; padding:10px; border-radius:5px; margin-bottom:15px;">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" style="background:rgba(40,167,69,0.2); color:#2ecc71; padding:10px; border-radius:5px; margin-bottom:15px;">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form action="/Customer/UpdateProfile" method="post">
                <div class="form-group">
                    <label>Customer ID (Read Only)</label>
                    <input type="text" name="CustomerId" value="@Model.CustomerId" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" name="Name" value="@Model.Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" name="Email" value="@Model.Email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" name="Phone" value="@Model.Phone" class="form-control" required />
                </div>
                <button type="submit" class="btn-save">Save Changes</button>
                <a href="/Customer/Index" style="display:block; text-align:center; margin-top:15px; color:#aaa; text-decoration:none;">Back to Menu</a>
            </form>
        </div>
    </div>
    <div class="tm-video-wrapper"><video autoplay muted loop id="tm-video"><source src="~/video/wave-cafe-video-bg.mp4" type="video/mp4"></video></div>
</body>
</html>