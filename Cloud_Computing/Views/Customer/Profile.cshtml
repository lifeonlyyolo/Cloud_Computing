@model WebApplication1.Models.Customer
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>My Profile - Wave Cafe</title>
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/css/tooplate-wave-cafe.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: black;
            font-family: 'Open Sans', sans-serif;
        }

        .tm-video-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        #tm-video {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            min-width: 100%;
            min-height: 100%;
            object-fit: cover;
        }

        .profile-container {
            position: relative;
            z-index: 1;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .profile-box {
            width: 100%;
            max-width: 500px;
            background: rgba(0, 0, 0, 0.85);
            padding: 40px;
            border-radius: 15px;
            color: white;
            border: 1px solid rgba(255,255,255,0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            color: #099;
            font-weight: bold;
            display: block;
            margin-bottom: 8px;
            font-size: 13px;
            text-transform: uppercase;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            background: rgba(255,255,255,0.1);
            border: 1px solid #444;
            color: white;
            border-radius: 5px;
            box-sizing: border-box;
        }

            .form-control[readonly] {
                background: rgba(255,255,255,0.05);
                color: #888;
                cursor: not-allowed;
            }

        .btn-save {
            width: 100%;
            padding: 15px;
            background: #099;
            color: white;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
        }

        .alert {
            padding: 10px;
            border-radius: 5px;
            text-align: center;
            margin-bottom: 20px;
            border: 1px solid;
        }

        .alert-success {
            background: rgba(0, 255, 153, 0.1);
            color: #00ff99;
            border-color: #00ff99;
        }

        .alert-danger {
            background: rgba(255, 0, 0, 0.1);
            color: #ff4444;
            border-color: #ff4444;
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <div class="profile-box">
            <h2 style="color: #099; text-align: center;">My Profile</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" style="background:rgba(220,53,69,0.2); color:#ff6b6b; padding:10px; border-radius:5px; margin-bottom:15px;">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" style="background:rgba(40,167,69,0.2); color:#2ecc71; padding:10px; border-radius:5px; margin-bottom:15px;">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form action="/Customer/UpdateProfile" method="post">
                <div class="form-group">
                    <label>Customer ID (Read Only)</label>
                    <input type="text" name="CustomerId" value="@Model.CustomerId" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" name="Name" value="@Model.Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" name="Email" value="@Model.Email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" name="Phone" value="@Model.Phone" class="form-control" required />
                </div>
                <button type="submit" class="btn-save">Save Changes</button>
                <a href="/Customer/Index" style="display:block; text-align:center; margin-top:15px; color:#aaa; text-decoration:none;">Back to Menu</a>
            </form>
        </div>
    </div>
    <div class="tm-video-wrapper"><video autoplay muted loop id="tm-video"><source src="~/video/wave-cafe-video-bg.mp4" type="video/mp4"></video></div>
</body>
</html>